@{ 
    ViewBag.Title = "Sahiplendirme";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/css/Home_message.css" rel="stylesheet" />
</head>
<body>

    <br /><br /><br />
    <div class="container contact">
        <div class="row">
            <div class="col-md-3">
                <div class="contact-info">
                    <h2 class="text-light">Tatlı dostluklar burada başlar :)</h2>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                    <div class="form-group">
                        <label class="control-label col-sm-2 text-light" for="fname">Ad:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="fname" placeholder="Adınızı girin" name="fname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 text-light" for="lname">Soyad:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lname" placeholder="Soyadınızı girin" name="lname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 text-light" for="email">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" placeholder="Email girin" name="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm text-light" for="comment">Neden Sahiplenmek istiyorsunuz:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" id="comment"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" onclick="msg()" class="btn btn-primary">Başvur</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        function msg() {
            window.alert("Başvurunuzu değerlendirip kısa zamanda size geri dönüş yapacazğız. İyi günler dileriz :)")
            window.location.reload();
        }
    </script>

</body>
</html>